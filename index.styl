body
{
    background: #aaa;
}

.market
{
    transform-style: preserve-3d;
    display: flex;
    align-items: center;
    perspective: 500px;
    position: absolute;
    top: 300px;
    width: 100%;

    &__radio {
        display: none;
    }
}

.card
{
    $width = 380px;

    border: 1px solid black;
    width: $width;
    transition-property: all;
    transition-duration: .5s;
    background: #fff;

    &__label {
        display: block;
        height: 100%;
        width: 100%;
    }

    &__image {
        display: block;
        max-width: 100%;
        max-height: 100%;
    }
}

#img4:checked ~ .card4
{
    transform: translateZ(60px);
}

#img1:checked ~ .card1
{
    transform: translateX(540px) translateZ(60px);
}

#img1:checked ~ .card2
{
    transform: translateX(450px) rotateY(-50deg);
}

#img1:checked ~ .card3
{
    transform: translateX(360px) rotateY(-50deg);
