$number-photos = 7;

body,
html
{
    height: 100%;
    margin: 0;
}

body
{
    background-color: #ccc;
    margin: 0;
}

.pictures-gallery
{
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;

    &__control
    {
        display: none;
    }
}

.picture-container
{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    transform-style: preserve-3d;
    perspective: 800px;
    transition: all .5s ease-in;

    &_picture
    {
        width: 200px;
        height: 135px;
        transition: all .5s ease-in;
        box-shadow: 10px 10px 25px 0 rgba(0,0,0,.5);

        img
        {
            width: 100%;
            height: 100%;
        }
    }

    for $index in (1..$number-photos) {
        $translate = 800 - 200 * $index;
        $perspective-left = 10 + $index * 10;
        $perspective-right = 90 - $index * 10;
        #picture-{$index}:checked ~ &
        {
            transform: translateX(($translate)px);
            perspective-origin: ($perspective-left)% ($perspective-right)%;
        }
    }

    for $index-1 in (1..$number-photos) {
        for $index-2 in (1..$number-photos) {
            $translate-x = ($index-1 - $index-2) * 150;
            $translate-z = 100;
            $rotate = 0;
            if ($index-1 > $index-2) {
                $rotate = 50;
                $translate-x -= 80;
                $translate-z = -50;
            }
            if ($index-1 < $index-2) {
                $rotate = -50;
                $translate-x += 80;
                $translate-z = -50;
            }
            #picture-{$index-1}:checked ~ & &__picture-{$index-2}
            {
                transform: translateX(($translate-x)px) translateZ(($translate-z)px) rotateY(($rotate)deg);
            }
        }
    }
}
