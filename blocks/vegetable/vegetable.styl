.vegetable
{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background-color: #fff;
  cursor: pointer;
  transition: all 1s ease-in-out;
  transform: translateZ(0);
  backface-visibility: hidden;
  box-shadow: 0 3px 25px rgba(0, 0, 0, .5);
}